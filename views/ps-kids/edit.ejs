<% layout('layouts/boilerplate')%>

    <div class="row">
        <h1 class="text-center">Edytuj sesję</h1>
        <div class="col-6 offset-3">
            <form action="/kids/<%= kids._id%>?_method=PUT " method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Nazwa sesji</label>
                    <input class="form-control" type="text" id="title" name="kids[title]" value="<%= kids.title %>"
                        required>
                    <div class="valid-feedback">
                        Jest OK!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Dodaj więcej obrazów</label>
                    <input type="file" name="image" id="image" multiple>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Edytuj sesję</button>
                </div>
            </form>
                <section><a href=" /kids/<%= kids._id %> ">wróć do sesji</a></section>
                <section><a href="/kids">Sesje dziecięce</a></section>
        </div>
    </div>