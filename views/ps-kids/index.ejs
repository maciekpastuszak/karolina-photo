<% layout('layouts/boilerplate')%>
    <div class="container pt-3">
        <div class="d-flex justify-content-between">
            <h2 class="pshoot-header">Sesje dziecięce</h2>
            <div>
                <% if(currentUser) { %>
                    <a class="btn btn-warning" href="/kids/new">Dodaj sesję</a>
                    <% } %>
            </div>
        </div>
        <div class="container">
            <div class="row justify-content-start">
                <% for (let kid of kids) { %>
                    <div class="col-xs-12 col-md-6 col-xl-4 px-3 py-3">
                        <div class="pshoot-card card mb-4">
                            <div class="card-body p-0">
                                <a href="kids/<%=kid._id%>">
                                    <% if(kid.images.length) {%>
                                        <img class="card-img-top" src="<%= kid.images[0].url %>" alt="card-img"
                                            id="pshoot-img">
                                        <% } else {%>
                                            <img class="card-img-top"
                                                src="https://res.cloudinary.com/dqcadja0y/image/upload/v1617459271/sample.jpg"
                                                alt="card-img" id="pshoot-img">
                                            <% } %>
                                                <h5 class="pshoot-header card-title mx-2 my-2">
                                                    <%=kid.title%>
                                                </h5>
                                </a>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
    </div>