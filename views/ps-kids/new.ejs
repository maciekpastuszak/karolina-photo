<% layout('layouts/boilerplate')%>

    <div class="row">
        <h1 class="text-center">Dodaj nową sesję</h1>
        <div class="col-6 offset-3">
            <form action="/kids" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Nazwa sesji</label>
                    <input class="form-control" type="text" id="title" name="kids[title]" required>
                    <div class="valid-feedback">
                        Jest OK!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Opis sesji</label>
                    <textarea class="form-control" type="text" id="description" name="kids[description]" required>
                    </textarea>
                </div>
                <div class="valid-feedback">
                    Jest OK!
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Dodaj sesję</button>
                </div>
            </form>
            <a href="/kids">Sesje dziecięce</a>
        </div>
    </div>


    <script>
        (function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            const forms = document.querySelectorAll('.validated-form')

            // Loop over them and prevent submission
            Array.from(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>