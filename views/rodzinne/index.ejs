<% layout('layouts/boilerplate')%>
    <div class="container pt-3">
        <div class="d-flex justify-content-between">
            <div></div>
            <div>
                <h2 class="pshoot-header">Sesje rodzinne</h2>
            </div>
            <div>
                <% if(currentUser) { %>
                    <a class="btn btn-warning" href="/rodzinne/new">Dodaj zdjÄ™cie</a>
                    <% } %>
            </div>
        </div>
        <div class="container">
            <div class="row justify-content-start">
                <% for (let fam of family) { %>
                    <div class="col-xs-12 col-md-6 px-3 py-3">
                        <div class="pshoot-card card mb-4">
                            <div class="card-body p-0">
                                <% if(currentUser) { %>
                                    <a href="rodzinne/<%=fam._id%>">link</a>
                                    <% } %>
                                <div>
                                    <% if(fam.images.length) {%>
                                        <img class="card-img-top" src="<%= fam.images[0].url %>" alt="card-img"
                                            id="pshoot-img">
                                        <% } else {%>
                                            <img class="card-img-top"
                                                src="https://res.cloudinary.com/dqcadja0y/image/upload/v1617459271/sample.jpg"
                                                alt="card-img" id="pshoot-img">
                                            <% } %>
                                            </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
    </div>