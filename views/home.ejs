    <div id="carousel" class="carousel slide carousel-fade mx-auto" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="3000">
                <img src="/images/1_sesja_ciazowa_bielsko.jpg" class="d-block w-100" alt="carousel-photo-1">
            </div>
            <div class="carousel-item" data-bs-interval="3000">
                <img src="/images/2_sesja_dziecieca_bielsko1.jpg" class="d-block w-100" alt="carousel-photo-2">
            </div>
            <div class="carousel-item" data-bs-interval="3000">
                <img src="/images/3_sesja_ciazowa_bielsko1.jpg" class="d-block w-100" alt="carousel-photo-3">
            </div>
            <div class="carousel-item" data-bs-interval="3000">
                <img src="/images/4_sesja_dziecieca_bielsko.jpg" class="d-block w-100" alt="carousel-photo-4">
            </div>
            <div class="carousel-item" data-bs-interval="3000">
                <img src="/images/5_sesja_ciazowa_bielsko.jpg" class="d-block w-100" alt="carousel-photo-5s">
            </div>
